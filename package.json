{
  "name": "replay",
  "version": "1.0.0",
  "description": "Replay without advertisings",
  "main": "index.js",
  "scripts": {
    "build_js": "babel javascripts --out-file public/script.js --source-maps",
    "build_css": "cleancss -o public/style.css css/* --source-map",
    "build": "rm -rf public && mkdir public && npm run build_js && npm run build_css",
    "watch_js": "npm run build_js -- -w",
    "watch_css": "watch -n 0.5 -x npm run build_css",
    "test": "./node_modules/mocha/bin/mocha --require babel-core/register",
    "dev": "npm run build && DEBUG=replay nodemon -- index.js",
    "start": "npm run build && node -r babel-register index.js"
  },
  "keywords": [
    "debug",
    "express",
    "fs",
    "http",
    "i18n",
    "nodejs",
    "path"
  ],
  "author": "NerOcrO",
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.8.6"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.4.3",
    "babel-register": "^6.26.0",
    "clean-css-cli": "^4.2.1",
    "compression": "^1.7.3",
    "debug": "^3.1.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "i18n": "^0.8.3",
    "node-fetch": "^2.2.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NerOcrO/replay-without-advertisings"
  }
}
